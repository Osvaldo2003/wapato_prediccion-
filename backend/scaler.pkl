import pickle
import numpy as np
from sklearn.linear_model import LogisticRegression
from sklearn.preprocessing import StandardScaler
from sklearn.model_selection import train_test_split
from sklearn.metrics import accuracy_score

# Datos de ejemplo (deberías usar tus propios datos)
X = np.array([[25, 5, 200, 50], [30, 3, 150, 30], [45, 7, 300, 70], [22, 8, 250, 60]])  # Edad, tiempo de uso, interacciones, libros leídos
y = np.array([0, 1, 0, 1])  # 0 = no abandono, 1 = abandono

# Escalador
scaler = StandardScaler()
X_scaled = scaler.fit_transform(X)

# Dividir los datos en entrenamiento y prueba
X_train, X_test, y_train, y_test = train_test_split(X_scaled, y, test_size=0.2, random_state=42)

# Entrenar el modelo de regresión logística
model = LogisticRegression()
model.fit(X_train, y_train)

# Hacer predicciones
y_pred = model.predict(X_test)
print(f'Precisión del modelo: {accuracy_score(y_test, y_pred)}')

# Guardar el modelo y el escalador
with open('churn_model.pkl', 'wb') as f:
    pickle.dump(model, f)

with open('scaler.pkl', 'wb') as f:
    pickle.dump(scaler, f)

print("Modelo y escalador guardados exitosamente.")
